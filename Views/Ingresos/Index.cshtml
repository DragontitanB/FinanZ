@model IEnumerable<MyFi.Models.Ingreso>

@{
    ViewData["Title"] = "Index";
}

<h1 class="titulo-morado">Ingresos</h1>

<p>
    <a class="create-link" asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Automatico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recurrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Automatico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recurrencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNavigation.Id)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.Id_Ingresos">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_Ingresos">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
