@model MyFi.Models.Ingreso

@{
    ViewData["Title"] = "Delete";
}

<h1 class="titulo-morado">Eliminar</h1>

<h3 class="titulo-morado">¿Estas seguro de que quieres eliminar esto?</h3>
<div>
    <h4>Ingreso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notificacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notificacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Automatico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Automatico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Recurrencia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recurrencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdNavigation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Ingresos" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
