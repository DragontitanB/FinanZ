@model IEnumerable<MyFi.Models.Gasto>

@{
    ViewData["Title"] = "Index";
}

<h1>Gastos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recurrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Automatico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recurrencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Automatico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoNavigation.IdTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGastos">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdGastos">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdGastos">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
