            </div>
            <div class="form-group">
                <label asp-for="Automatico" class="control-label"></label>
                <input asp-for="Automatico" class="form-control" />
                <span asp-validation-for="Automatico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
