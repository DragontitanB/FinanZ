@model IEnumerable<MyFi.Models.Configuracion>

@{
    ViewData["Title"] = "Index";
}

<h1>Configarciones</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notificaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdConfiguracionNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notificaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdConfiguracionNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdConfiguracion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdConfiguracion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdConfiguracion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
